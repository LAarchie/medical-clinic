public class MedicalSystemTest {
    public static void main(String[] args) {
        MedicalSystem system = new MedicalSystem();

        // Dodanie lekarzy
        Doctor d1 = new Doctor("Alice", "Brown", "56789012345", LocalDate.of(1980, 3, 20), 43, "456789123", "alice.brown@example.com", "DOC001");
        d1.addSpecialization("Cardiology");
        d1.addSpecialization("Internal Medicine");

        Doctor d2 = new Doctor("Bob", "Green", "89012345678", LocalDate.of(1975, 7, 10), 49, "123987456", "bob.green@example.com", "DOC002");
        d2.addSpecialization("Orthopedics");

        Doctor d3 = new Doctor("Clara", "White", "34567890123", LocalDate.of(1988, 5, 22), 36, "789654123", "clara.white@example.com", "DOC003");
        d3.addSpecialization("Pediatrics");

        Doctor d4 = new Doctor("David", "Black", "56789012345", LocalDate.of(1990, 12, 1), 34, "321654987", "david.black@example.com", "DOC004");
        d4.addSpecialization("Dermatology");
        d4.addSpecialization("Cosmetology");

        // Dodanie lekarzy do systemu
        system.addDoctor(d1);
        system.addDoctor(d2);
        system.addDoctor(d3);
        system.addDoctor(d4);

        // Dodanie grafików dla lekarzy
        system.addSchedule(new Schedule("DOC001", LocalDate.now(), "09:00-17:00")); // Dziś
        system.addSchedule(new Schedule("DOC001", LocalDate.now().plusDays(2), "10:00-16:00")); // Za 2 dni

        system.addSchedule(new Schedule("DOC002", LocalDate.now(), "08:00-14:00")); // Dziś
        system.addSchedule(new Schedule("DOC002", LocalDate.now().plusDays(3), "12:00-18:00")); // Za 3 dni

        system.addSchedule(new Schedule("DOC003", LocalDate.now().plusDays(1), "09:00-13:00")); // Jutro
        system.addSchedule(new Schedule("DOC003", LocalDate.now().plusDays(5), "14:00-20:00")); // Za 5 dni

        system.addSchedule(new Schedule("DOC004", LocalDate.now().plusDays(2), "11:00-15:00")); // Za 2 dni
        system.addSchedule(new Schedule("DOC004", LocalDate.now().plusDays(7), "09:00-17:00")); // W ostatnim dniu tygodnia

        // Pobieranie grafików dla każdego lekarza na najbliższy tydzień
        System.out.println("Grafiki na najbliższy tydzień:");
        List<Doctor> doctors = List.of(d1, d2, d3, d4);

        for (Doctor doctor : doctors) {
            System.out.println("\nLekarz: " + doctor.getId() + " - " + doctor.getLastName());
            List<Schedule> nextWeekSchedules = system.getSchedulesForDoctorNextWeek(doctor.getId());
            for (Schedule schedule : nextWeekSchedules) {
                System.out.println(schedule);
            }
        }
    }
}
